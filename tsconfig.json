{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "sourceMap": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./assets",
    "paths": {
      "@app/*": [
        "js/app/*"
      ],
    }
  },
  "include": [
    "assets/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "public/build",
    "var",
    "vendor"
  ]
}
